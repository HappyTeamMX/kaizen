extends layout

block content
  .container
    .well.col-sm-7.col-sm-offset-3
      .actions.row
        a.btn.right(href="/simulation/new")
          i.fa.fa-plus
          | New Simulation
      .lastest.col-sm-offset-1
        .subhead Lastest Simulations
        ul.list
          for item in simulations
            li
              i.status(class="#{ item.status.name }")
              span(class="pop", data-toggle="popover") [ #{item.name} | #{item.date} ]
                .popover
                  span
                    a.btn(href="/simulation/detail/#{item.id}") Diagram
                    a.btn Data
      .actions.row
        a.btn.right(href="simulation/list")
          | View all
          i.fa.fa-chevron-right
