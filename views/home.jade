extends layout

block content
  .container
    .well.col-sm-7.col-sm-offset-3
      .actions.row
        a.btn.right(href="/new_simulation")
          i.fa.fa-plus
          | New Simulation
      .lastest.col-sm-offset-1
        .subhead Lastest Simulations
        ul.list
          li
            i.status.done
            span(class="pop", data-toggle="popover") [Simulation name | Date]
              .popover
                span
                  a.btn Diagram
                  a.btn Data
          li
            i.status.pending
            span(class="pop", data-toggle="popover") [Simulation name | Date]
              .popover
                span
                  a.btn Diagram
                  a.btn Data
          li
            i.status.canceled
            span(class="pop", data-toggle="popover") [Simulation name | Date]
              .popover
                span
                  a.btn Diagram
                  a.btn Data
          li
            i.status.done
            span(class="pop", data-toggle="popover") [Simulation name | Date]
              .popover
                span
                  a.btn Diagram
                  a.btn Data
          li
            i.status.active
            span(class="pop", data-toggle="popover") [Simulation name | Date]
              .popover
                span
                  a.btn Diagram
                  a.btn Data
      .actions.row
        a.btn.right
          | View all
          i.fa.fa-chevron-right
