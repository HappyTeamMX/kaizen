extends layout

block content
  .container
    .well.col-sm-7.col-sm-offset-3
      .actions.row
        a.btn.right(href="/simulation/new")
          i.fa.fa-plus
          | New Simulation
      .lastest.col-sm-offset-1
        .subhead Lastest Simulations
        ul.list
          li
            i.status.done
            span(class="pop", data-toggle="popover") [ sim.name| sim.date ]
              .popover
                span
                  a.btn Diagram
                  a.btn Data
      .actions.row
        a.btn.right
          | View all
          i.fa.fa-chevron-right
