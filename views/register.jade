extends layout

block content
    .container
        .col-sm-6.col-sm-offset-3
            h1 Register
            if message
                .alert.alert-danger=message
            form(action="/register" method="post")
                .form-group
                    label Username
                    input.form-control(type="text" name="email")
                .form-group
                    label Password
                    input.form-control(type="password" name="password")
                .form-group
                    button.col-sm-12.btn.btn-big.iisblue.subhead(type="submit")
                        span Signup
