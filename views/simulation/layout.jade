doctype html
html(lang="en", ng-app="workstation")
  head
    title=title
    meta(name="viewport", content="width=device-width, initial-scale=1")
    // CDN CSS
    link(href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css", rel="stylesheet")
    link(href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/3.0.0/css/bootstrap-datetimepicker.min.css", rel="stylesheet")
    link(href="//cdn.datatables.net/1.10.2/css/jquery.dataTables.css", rel="stylesheet")
    // Site CSS
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/workstation.css')
  body(ng-controller="Workstation")
    header
      nav(role="navigation").navbar.navbar-default
        .navbar-header
          button(type="button", data-toggle="collapse", data-target=".navbar-ex1-collapse").navbar-toggle
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a(href="/home").navbar-brand=title
        .collapse.navbar-collapse.navbar-ex1-collapse
          ul.nav.navbar-nav.navbar-right
            li
              span.user kaizen
            li
              a(href="/logout")
                i.fa.fa-sign-out Logout
    .content
      block content
    footer

    // CDN JS
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
    script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.7.0/moment.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/3.0.0/js/bootstrap-datetimepicker.js")
    // script(src="//cdn.datatables.net/1.10.2/js/jquery.dataTables.js")
    // AJS dependencies
    script(src="/js/uuid.js")
    // Angular App
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.min.js")
    // Site Script
    script(src="/js/script.js")
    script(src="/js/jquery.dataTables.js")
    script(src="/js/TableTools.js")
    script(src="/js/ZeroClipboard.js")

    block extended-scripts
