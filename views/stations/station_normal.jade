extends layout

block content
  .container
    h1 {{station_data.name}}
    .row
      ul.tickets
        li.note(ng-repeat="order in item_list", data-id="{{ order.item }}").
          {{ order.item }}
    .row
      .timer.col-sm-4.col-sm-offset-4
    .row
      .controls
        .form
          .form-group#start
            button.btn.btn-info Start
          .form-group.send-to
            label Send To
            select
              option Warehouse
              option Station A
              option Station B
              option Station C
              option QA 1
            button.btn(type="button")
                  i.fa.fa-check
          .form-group#end
            button.btn.btn-info End

