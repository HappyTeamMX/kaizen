extends layout

block content
  .container
    h1 {{station_data.name}}
    .row
      ul.tickets
        li.note(ng-repeat="order in item_list", data-id="{{ order.item }}", data-secret="{{ order.id }}").
          {{ order.item }}
    .row
      .timer.col-sm-4.col-sm-offset-4
    .row
      .controls
        .form
          .form-group#start
            button.btn.btn-info Start
          .form-group.send-to
            label Send To
            select(ng-model="new_item.target", ng-options="unit.name for unit in station_data.all_stations")
            button.btn.btn-animated.active(type="button", ng-click="send_order('pass')")
              i.fa.fa-check
              span Send
          .form-group#end
            button.btn.btn-info(type="button", ng-click="send_order('end')") End

